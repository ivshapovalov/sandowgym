<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.brainworkout.sandow_gym">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_sandow_big"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityExercisesList"
            android:label="@string/exercises_list_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityExercise"
            android:label="@string/exercise_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityTrainingsList"
            android:label="@string/trainings_list_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityTraining"
            android:label="@string/training_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityTrainingOptions"
            android:label="@string/training_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityCalendarView"
            android:label="@string/calendar_view_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".database.manager.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".activities.ActivityFileExportImport"
            android:label="@string/export_import_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityUsersList"
            android:label="@string/users_list_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ActivityUser"
            android:label="@string/user_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>