<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.brainworkout.sandow_gym">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_sandow"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ExercisesListActivity"
            android:label="@string/exercises_list_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ExerciseActivity"
            android:label="@string/exercise_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TrainingsListActivity"
            android:label="@string/trainings_list_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TrainingActivity"
            android:label="@string/training_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TrainingActivityOptions"
            android:label="@string/training_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CalendarViewActivity"
            android:label="@string/calendar_view_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".database.AndroidDatabaseManager"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".activities.FileExportImportActivity"
            android:label="@string/calendar_view_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>