<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activities.ActivityOptions">

    <ScrollView
        android:id="@+id/svTableLogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_border">

                <Button
                    android:id="@+id/buttonCancel"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@android:drawable/spinner_dropdown_background"
                    android:onClick="buttonCancel_onClick"
                    android:text="CANCEL"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/buttonSave"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:background="@android:drawable/spinner_dropdown_background"
                    android:onClick="buttonSave_onClick"
                    android:text="SAVE"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:text="ROWS ON PAGE IN LISTS"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRowsOnPageInLists"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:ems="10"
                    android:focusable="auto"
                    android:inputType="numberDecimal" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/labelBackupLocalFolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="20"
                    android:text="BACKUP LOCAL FOLDER"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etBackupLocalFolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:clickable="false"
                    android:ems="5"
                    android:inputType="none"
                    android:singleLine="false"
                    android:textIsSelectable="true" />

                <Button
                    android:id="@+id/btSelectBackupLocalFolder_onClick"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@drawable/bt_border"
                    android:onClick="ibSelectBackupLocalFolder_onClick"
                    android:text="..."
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btClearBackupLocalFolder_onClick"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@drawable/bt_border"
                    android:onClick="btClearBackupLocalFolder_onClick"
                    android:text="X"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/textView09"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="100"
                    android:text="BACKUP FTP CREDENTIALS"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/labelFtpHost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="25"
                    android:paddingLeft="20dp"
                    android:text="HOST"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFtpHost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="75"
                    android:ems="10"
                    android:inputType="textMultiLine" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/labelFtpLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="25"
                    android:paddingLeft="20dp"
                    android:text="LOGIN"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFtpLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="75"
                    android:ems="10"
                    android:inputType="textMultiLine" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/labelFtpPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:paddingLeft="20dp"
                    android:text="PASSWORD"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etFtpPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <ImageButton
                    android:id="@+id/ibFTPTestConnectionButton"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    app:srcCompat="@mipmap/ic_ftp_foreground" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="100"
                    android:text="BACKUP DROPBOX ACCESS TOKEN"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/labelDropboxAccessToken"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="30"
                    android:paddingLeft="20dp"
                    android:text="ACCESS TOKEN"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etDropboxAccessToken"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="65"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <ImageButton
                    android:id="@+id/ibDropboxTestConnectionButton"
                    android:layout_width="15dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="5"
                    app:srcCompat="@mipmap/ic_dropbox_foreground" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="40"
                    android:text="DAILY FULL BACKUP"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgScheduledBackup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbScheduledBackupYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:checked="true"
                        android:text="YES"
                        android:textColor="@color/text_color" />

                    <RadioButton
                        android:id="@+id/rbScheduledBackupNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="NO"
                        android:textColor="@color/text_color" />
                </RadioGroup>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_border">

                <TextView
                    android:id="@+id/tvBackupScheduleTime"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_weight="100"
                    android:background="@android:drawable/checkbox_off_background"
                    android:editable="false"
                    android:gravity="center"
                    android:onClick="tvBackupScheduleTime_onClick"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </TableRow>
            <!--            <TableRow-->
            <!--                android:id="@+id/tableRow13"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="15dp"-->
            <!--                android:background="@drawable/bt_border">-->

            <!--                <Button-->
            <!--                    android:id="@+id/btBackupScheduleTest"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_marginTop="10dp"-->
            <!--                    android:layout_weight="100"-->
            <!--                    android:background="@android:drawable/spinner_dropdown_background"-->
            <!--                    android:onClick="btBackupScheduleSaveTest_onClick"-->
            <!--                    android:text="SAVE TEST"-->
            <!--                    android:textColor="@color/text_color" />-->
            <!--            </TableRow>-->
            <TableRow
                android:id="@+id/tableRow11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bt_border">

                <Button
                    android:id="@+id/btBackupScheduleTimeShow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="100"
                    android:background="@android:drawable/spinner_dropdown_background"
                    android:onClick="btBackupScheduleTimeShow_onClick"
                    android:text="SHOW SCHEDULE"
                    android:textColor="@color/text_color" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>
