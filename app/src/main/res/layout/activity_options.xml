<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.ActivityOptions">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineMain">

        <Button

            android:id="@+id/buttonCancel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@android:drawable/spinner_dropdown_background"
            android:onClick="buttonCancel_onClick"
            android:text="CANCEL"
            android:textColor="@color/text_color"
            android:textSize="12sp" />

        <Button

            android:id="@+id/buttonSave"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@android:drawable/spinner_dropdown_background"
            android:onClick="buttonSave_onClick"
            android:text="SAVE"
            android:textColor="@color/text_color"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linePlusMinusButtonValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@+id/lineMain">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="50"
            android:text="ROWS ON PAGE IN LISTS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etRowsOnPageInLists"
            android:layout_weight="50"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineHeaderFtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linePlusMinusButtonValue">
        <TextView
            android:id="@+id/textView09"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="100"
            android:text="BACKUP FTP CREDENTIALS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineFtpHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lineHeaderFtp">
        <TextView
            android:id="@+id/labelFtpHost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:text="HOST"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:paddingLeft="20dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/etFtpHost"
            android:layout_weight="70" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineFtpLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lineFtpHost">
        <TextView
            android:id="@+id/labelFtpLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:text="LOGIN"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:paddingLeft="20dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/etFtpLogin"
            android:layout_weight="70" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineFtpPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lineFtpLogin">
        <TextView
            android:id="@+id/labelFtpPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="32"
            android:text="PASSWORD"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/etFtpPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="58"
            android:ems="10"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/ibFTPTestConnectionButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            app:srcCompat="@mipmap/ic_ftp_foreground" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineHeaderDropbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_below="@+id/lineFtpPassword">
        <TextView
            android:id="@+id/textView19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="100"
            android:text="BACKUP DROPBOX ACCESS TOKEN"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineDropboxAccessToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lineHeaderDropbox">
        <TextView
            android:id="@+id/labelDropboxAccessToken"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:text="ACCESS TOKEN"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/etDropboxAccessToken"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="55"
            android:ems="10"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/ibDropboxTestConnectionButton"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="5"
            app:srcCompat="@mipmap/ic_dropbox_foreground" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineScheduleBackupActivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineDropboxAccessToken"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:text="DAILY FULL BACKUP"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgScheduledBackup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbScheduledBackupYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:checked="true"
                android:text="YES"
                android:textColor="@color/text_color" />

            <RadioButton
                android:id="@+id/rbScheduledBackupNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="NO"
                android:textColor="@color/text_color" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineScheduleBackupTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineScheduleBackupActivation"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvBackupScheduleTime"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_weight="100"
            android:background="@android:drawable/checkbox_off_background"
            android:editable="false"
            android:gravity="center"
            android:onClick="tvBackupScheduleTime_onClick"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineScheduleBackupShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineScheduleBackupTime"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btBackupScheduleTimeShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@android:drawable/spinner_dropdown_background"
            android:onClick="btBackupScheduleTimeShow_onClick"
            android:text="SHOW SCHEDULE"
            android:textColor="@color/text_color" />
    </LinearLayout>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>
