<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.ActivityUsersList">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/trowButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_border">

            <Button
                android:id="@+id/buttonHome"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="8"
                android:background="@drawable/bt_border"
                android:onClick="buttonHome_onClick"
                android:text="HOME"
                android:textColor="@color/text_color"/>

            <Button
                android:id="@+id/btUsersAdd"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_span="8"
                android:background="@drawable/bt_border"
                android:onClick="btUsersAdd_onClick"
                android:text="ADD"
                android:textColor="@color/text_color"/>

            <Button
                android:id="@+id/btUsersDBEditor"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="10"
                android:background="@drawable/bt_border"
                android:onClick="bt_Edit_onClick"
                android:text="EDITOR"
                android:textColor="@color/text_color"/>


        </TableRow>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/svTableUsers"
            android:layout_marginTop="20dp"
            android:layout_weight="100">

        </ScrollView>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableRow3"
            android:background="@drawable/bt_border">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button23"
                android:onClick="btPreviousPage_onClick"
                android:layout_span="10"
                android:background="@drawable/bt_border"
                android:text="PREVIOUS PAGE"
                android:textColor="@color/text_color"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btPageNumber"
                android:layout_span="6"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bt_border"
                android:textColor="@color/text_color"
                android:nestedScrollingEnabled="true"
                android:clickable="false"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEXT PAGE"
                android:id="@+id/button26"
                android:onClick="btNextPage_onClick"
                android:layout_span="10"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bt_border"
                android:textColor="@color/text_color"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
