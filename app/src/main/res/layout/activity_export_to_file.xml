<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.ExportToFileActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Выгрузить"
                android:id="@+id/btExport"

                android:onClick="btExportToFile_onClick"
                android:layout_span="16"
                android:textSize="12dp"
                android:gravity="center_vertical|center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Закрыть"
                android:id="@+id/btClose"
                android:onClick="btClose_onClick"
                android:layout_span="10"
                android:textSize="12dp"
                android:gravity="center_vertical|center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Загрузить"
                android:id="@+id/button10"
                android:onClick="btImportFromFile_onClick"
                android:layout_span="14"
                android:textSize="12dp"
                android:gravity="center_vertical|center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Период с"
                android:id="@+id/textView6"
                android:layout_span="15"
                android:gravity="left|center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvDayFrom"
                android:layout_span="25"
                android:onClick="tvDayFrom_onClick"
                android:gravity="left|center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="по"
                android:id="@+id/textView7"
                android:layout_span="15"
                android:gravity="left|center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvDayTo"
                android:layout_span="25"
                android:onClick="tvDayTo_onClick"
                android:gravity="left|center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvPathToFiles"
                android:layout_span="40"
                android:gravity="left|center"
                android:background="@android:drawable/title_bar" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
