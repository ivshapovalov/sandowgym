<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ru.brainworkout.sandow_gym.TrainingActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:id="@+id/mTableMain">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:id="@+id/button3"
                android:onClick="btSave_onClick"
                android:layout_span="10"
                style="@android:style/TextAppearance.Small"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Удалить"
                android:id="@+id/button5"
                android:onClick="btDelete_onClick"
                android:layout_span="10"
                style="@android:style/TextAppearance.Small"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Закрыть"
                android:id="@+id/button4"
                android:onClick="btClose_onClick"
                android:layout_span="10"
                style="@android:style/TextAppearance.Small"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="30dp">

            <TextView
                style="@android:style/TextAppearance.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ID"
                android:layout_span="2"
                android:background="@drawable/textview_border" />

            <TextView
                style="@android:style/TextAppearance.Small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvID"
                android:layout_span="8"
                android:background="@drawable/textview_border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Дата"
                android:id="@+id/textView2"
                style="@android:style/TextAppearance.Small"
                android:layout_span="10"
                android:background="@drawable/textview_border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvDay"
                android:layout_span="10"
                android:onClick="tvDay_onClick"
                android:background="@drawable/textview_border" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/trowTrainingList">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/textView8"
                android:layout_span="6"
                android:gravity="center"
                android:background="@drawable/textview_border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/textView9"
                android:layout_span="6"
                android:gravity="center"
                android:background="@drawable/textview_border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/textView10"
                android:layout_span="6"
                android:gravity="center"
                android:background="@drawable/textview_border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/textView11"
                android:layout_span="6"
                android:gravity="center"
                android:background="@drawable/textview_border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Text"
                android:id="@+id/textView12"
                android:layout_span="6"
                android:gravity="center"
                android:background="@drawable/textview_border" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/svMain"
                android:background="@android:drawable/title_bar"
                android:layout_span="30">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:nestedScrollingEnabled="false"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/tvExerciseName"
                            android:background="@drawable/textview_border"
                            android:layout_span="50" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="btVolumeLeft10_onClick"
                            android:text="-10"
                            android:id="@+id/button11"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_span="11" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="btVolumeLeft_onClick"
                            android:text="-"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_span="5" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:ems="10"
                            android:id="@+id/etVolume"
                            android:textColorHint="@color/dim_foreground_material_dark"
                            android:background="@drawable/rounded_corners2"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_span="18" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="btVolumeRight_onClick"
                            android:text="+"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_span="5" />

                        <Button
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="btVolumeRight10_onClick"
                            android:text="+10"
                            android:id="@+id/button12"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_span="11" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="400dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ivPicture"
                            android:layout_span="25"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/tvExplanation"
                            android:layout_span="25" />
                    </TableRow>

                </TableLayout>
            </ScrollView>

        </TableRow>


    </TableLayout>

</RelativeLayout>

